{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Or "node" if "bundler" is problematic
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true, // Important for Vite
    "noEmit": true,          // Vite handles the emitting/transpilation
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true // Often useful
  },
  "include": ["src"]
}